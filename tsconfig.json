{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "typings/",
    "outDir": "lib/",
    "rootDir": "src/",
    "strict": true,
    "composite": true,
    "noUncheckedIndexedAccess": true,
    "tsBuildInfoFile": "typings/tsconfig.tsbuildinfo",
    "noErrorTruncation": true,
    "forceConsistentCasingInFileNames": true
  },
  "typedocOptions": {
    "excludeExternals": true,
    "includeVersion": true,
    "name": "telejs",
    "out": "docs/pages",
    "theme": "minimal"
  },
  "include": ["src/"]
}
